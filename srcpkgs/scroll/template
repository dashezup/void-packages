# Template file for 'scroll'
pkgname=scroll
version=0.1
revision=1
build_style=gnu-makefile
makedepends="git musl-legacy-compat"
short_desc="scrollbackbuffer program for st"
maintainer="Dash Eclipse <dash@ezup.dev>"
license="ISC"
homepage="https://git.suckless.org/scroll"

do_fetch(){
	git clone --depth 1 git://git.suckless.org/scroll ${wrksrc}
	commit_id=$(git -C ${wrksrc} rev-parse HEAD)
	sed -i "/^VERSION = /s/$/-${commit_id}/" ${wrksrc}/config.mk
}
